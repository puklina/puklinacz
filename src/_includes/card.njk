<article class="card" style="scroll-snap-align: start;">
  <img
    src="{{ project.data.image }}"
    alt="{{ project.data.title | escape }}"
    loading="lazy"
    decoding="async"
/>
  <div class="card-body">
    <h3>{{ project.data.title }}</h3>
    <p>{{ project.data.description }}</p>
    {% if project.data.start_date and project.data.end_date %}
      <p class="realizace">Realizace:
        <strong>
          {{ project.data.start_date | date('MM/YYYY') }}
      â€“
      {{ project.data.end_date | date('MM/YYYY') }}
        </strong>
      </p>
    {% endif %}
  </div>
</article>